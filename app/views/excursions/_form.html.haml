= form_for @excursion do |f|
  - if @excursion.errors.any?
    #error_explanation
      %h2= "#{pluralize(@excursion.errors.count, "error")} prohibited this excursion from being saved:"
      %ul
        - @excursion.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :city_id
    = f.text_field :city_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :price
    = f.text_field :price
  .actions
    = f.submit 'Save'
