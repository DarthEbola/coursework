= form_for @excursion do |f|
  - if @excursion.errors.any?
    #error_explanation
      %h2= "#{pluralize(@excursion.errors.count, "error")} prohibited this excursion from being saved:"
      %ul
        - @excursion.errors.full_messages.each do |message|
          %li= message

  .row
    .col-md-4
      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control'
    .col-md-4
      .form-group
        = f.label :city
        = f.select(:city_id, options_for_select(City.pluck("name, id"), f.object.city_id), {}, {class: 'form-control'})
    .col-md-4
      .form-group
        = f.label :price
        = f.number_field :price, step: 0.01, class: 'form-control'
  .row
    .col-md-12
      .form-group
        = f.label :description
        = f.text_field :description, class: 'form-control'
  .form-actions.bottom20
    = f.submit nil, class: 'btn btn-primary'
