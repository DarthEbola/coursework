=breadcrumb_tag do
  %li.active
    = @excursion.name
  %li
    = link_to t('headers.excursions.index'), excursions_path()
  %li
    Главная

.page-header
  %h1= @excursion.name
.row
  .col-md-12
    %b= Excursion.human_attribute_name(:city)
    %p= @excursion.city.name
    
    %b= Excursion.human_attribute_name(:price)
    %p= @excursion.price
    
    %b= Excursion.human_attribute_name(:description)
    %p= @excursion.description

= link_to edit_excursion_path(@excursion), class: 'btn btn-info' do
  = fa_icon :edit
  = t('buttons.edit')
= link_to t('buttons.back'), excursions_path, class: 'btn btn-default'