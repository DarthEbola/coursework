%h1 Listing tours

%table
  %thead
    %tr
      %th Route
      %th Date start
      %th Count days
      %th Add pay
      %th Add description
      %th
      %th
      %th

  %tbody
    - @tours.each do |tour|
      %tr
        %td= tour.route.name
        %td= tour.date_start
        %td= tour.count_days
        %td= tour.add_pay
        %td= tour.add_description
        %td= link_to 'Show', tour
        %td= link_to 'Edit', edit_tour_path(tour)
        %td= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' }

%br

